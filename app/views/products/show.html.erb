  <section class="mt-50 mt-20-sm container zoom">
    <div class="row">



    
      <div class="col-lg-6 col-md-12">
        <div class="border-grey-1 br-60 br-30-sm">
          <div class="bg-style-1">
            <div class="h-400px h-200px-sm">
              <% if @product.product_images.active.order(:position).first.present? %>
                <img id="main-product-image" src="<%= @product.product_images.active.order(:position).first.image_url%>" alt="product-1" class="w-100 h-100 br-60 br-30-sm object-contain">
              <% else %>
                <img id="main-product-image" src="public/images/meeting_default.png" alt="product-1" class="w-100 h-100 br-60 br-30-sm object-contain">
              <% end %>
            </div>
          </div>
          <div class="bg-style-2">
            <div class="d-flex align-items-center justify-content-end">

              <% if @product.mosip_compliance.present? %>
                <% if MosipComplianceStatus.find_by_code(@product.mosip_compliance.parameterize()).present? && MosipComplianceStatus.find_by_code(@product.mosip_compliance.parameterize()).image_url %>
                  <div class="w-80px h-30px ml-3">
                    <img src="<%= MosipComplianceStatus.find_by_code(@product.mosip_compliance.parameterize()).image_url %>" alt="compliant-a" class="w-100 object-contain">
                  </div>
                <% end %>
              <% end %>

              <% if @product.mosip_integration.present? %>
                <% if MosipComplianceStatus.find_by_code(@product.mosip_integration.parameterize()).present? && MosipComplianceStatus.find_by_code(@product.mosip_integration.parameterize()).image_url %>
