                    <img src="<%= MosipComplianceStatus.find_by_code(@product.mosip_integration.parameterize()).image_url %>" alt="compliant-a" class="w-100 object-contain">
                  </div>
                <% end %>
              <% end %>
              

              
            </div>
          </div>
        </div>
        <div class="mt-30 mt-15-sm">
          <div class="d-flex justify-content-center">
            <% @product.product_images.active.order(:position).each do |img| %>
              <div class="bg-style-3 mx-20 mx-5-sm cursor-1">
                <div class="w-80px h-70px">
                  <img src="<%= img.image_url%>" alt="product-1" class="thumbnail w-100 h-100 br-10 object-contain">
                </div>
              </div>
            <% end %>
            
          </div>
        </div>
      </div>




      <div class="col-lg-6 col-md-12">
