<div class="w-25p w-40p-md mt-30 w-auto-sm mb-5">
  <i id="toggleOpen" class="fas fa-arrow-right toggle-icon"></i>
  <div class="sticky-sidebar">
    <i id="toggleClose" class="fas fa-times toggle-icon d-none"></i>
    <div class="text-style-2 fs-18 blue-2 mb-3">
      FILTERS <span class="ml-2"><img src="/images/product-main/filter-1.png" width="20" height="20"></span>
    </div>
    <div id="filterAccordion" class="accordion-2">

      <!-- SI Partnership Filter -->
      <div class="card border-0">
        <div class="card-header">
          <a class="card-link" data-toggle="collapse" href="#filterCollapseSix">
            <span>SI Partnership</span>
            <i class="fas fa-chevron-down arrow-icon"></i>
          </a>
        </div>
        <div id="filterCollapseSix" class="custom-collapse collapse show" aria-labelledby="headingSix">
          <div class="card-body mt-15">
            <input type="text" id="siFilterSearch" class="form-control mb-2" placeholder="Search...">
            <div class="scrollable-options-1">
              <% @si_partnerships.each do |si| %>
                <div class="custom-control custom-checkbox">
                  <%= check_box_tag 'si_partnerships[]', si.id, params[:si_partnerships]&.include?(si.id.to_s), id: "si_partnership_#{si.id}", class: 'custom-control-input filter-checkbox' %>
                  <label class="custom-control-label" for="si_partnership_<%= si.id %>"><%= si.name %></label>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
